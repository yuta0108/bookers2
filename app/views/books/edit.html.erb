<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h7 class="inputtitle">Title</h7>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <h7 class="inputOpinion">Opinion</h7>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-success btn-sm" %>
      <% end %>
      <div class="form-group">
        <%= link_to "Show", book_path %>
        |
        <%= link_to "Back", books_path %></div>
    </div>
  </div>
</div>
